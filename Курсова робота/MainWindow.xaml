<Window x:Class="Курсова_робота.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсова_робота"
        mc:Ignorable="d"
        SizeChanged="Window_SizeChanged"
        Title="Чат-бот готелю" Height="500" Width="400"
        Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="White"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="Black"/>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Кнопка перемикання теми -->
        <Button Name="ThemeToggleButton" Content="🌙" Width="40" Height="40" Click="ThemeToggleButton_Click"
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,10,5"
                Background="Transparent" BorderThickness="0" Foreground="{DynamicResource ForegroundBrush}"/>

        <!-- Поле для відображення чату -->
        <ListBox Name="ChatHistory" Grid.Row="1" Margin="0,5,0,10"
             Background="{DynamicResource BackgroundBrush}" Foreground="{DynamicResource ForegroundBrush}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" FontSize="{Binding ElementName=ChatHistory, Path=Tag}" 
                       TextWrapping="Wrap"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Поле вводу + кнопка -->
        <Grid Grid.Row="2" Margin="0,5,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox Name="UserInput" Height="40" FontSize="14" Padding="10"
                     Background="White" BorderThickness="0" VerticalContentAlignment="Center">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TextBox">
                                    <Border Background="White" CornerRadius="20"
                                BorderBrush="Gray" BorderThickness="1">
                                        <Grid>
                                            <ScrollViewer x:Name="PART_ContentHost" 
                                              VerticalAlignment="Center" 
                                              HorizontalAlignment="Stretch"/>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <Button Name="SendButton" Content="➤" Width="50" Height="40" Click="SendButton_Click" Grid.Column="1" 
                    Margin="10,0,0,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#0078D7"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontSize" Value="18"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="5"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004377"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Window>
