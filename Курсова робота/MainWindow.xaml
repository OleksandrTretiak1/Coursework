<Window x:Class="Курсова_робота.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсова_робота"
        mc:Ignorable="d"
        Title="ReServant - Чат-бот" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Поле для відображення чату -->
        <ListBox Name="ChatHistory" Grid.Row="0" Margin="10"/>

        <!-- Панель введення повідомлення -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <TextBox Name="UserInput" Width="280" Height="30" VerticalAlignment="Center"/>
            <Button Name="SendButton" Content="Відправити" Width="80" Height="30" Margin="5,0,0,0" Click="SendButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
